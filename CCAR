 */
#include <iostream>
#include <string>
using namespace std;
/**
 *創建一個叫CCAR的類別
 */
class CCAR {
/**
 *不受此類別外的物件影響，也部會被繼承
 */
private:
string nickname;
protected:
/**
 *宣告電燈和輪子
 */
int light;
int wheel;
/**
 *公用
 */
public:
CCAR() :light(2)
{
wheel = 5;
cout << "car's constructor(wheel=" << wheel << ")" << endl;
}
CCAR(string nickname) :light(2)
{
wheel = 5;
this->nickname = nickname;
cout << "car's constructor(nickname=" << nickname << ")" << endl;
}
/**
 *成員函式
 */
~CCAR()
{
cout << "car's destructor" << "(" << nickname << ")" << endl;
}
/**
 *成員函式
 */
void start()
{
cout << "car's start" << endl;
}
/**
 *成員函式
 */
void stop()
{
cout << "car's stop" << endl;
}
/**
 *成員函式
 */
void turn()
{
cout << "car's turn" << endl;
}
};
//--------------------------
/**
 * 繼承CCAR
 */
class CBMW : public CCAR {
public:
/**
 *設定輪子和電燈為初始直
*/
CBMW() { light = 4; wheel = 4; cout << "bmw's constructor" << endl; }
~CBMW() { cout << "bmw's destructor" << endl; }
/**
 *成員函式
 */
void Abs()
{
cout << "bmw's abs" << endl;
}
/**
 *成員函式
 */
void start()
{
cout << "bmw's start" << endl;
CCAR::start();//scope operator

}
};
//--------------------------
int main(int argc, const char * argv[])
/**
 *創bmw為名的CBMW類別
 */{
CBMW bmw;
// bmw.light=3;
/**
 *CBMW裡面的void start
 */
bmw.start();
/**
 *CBMW裡面的void Abs
 */
bmw.Abs();
/**
 *CBMW裡面的void stop
 */
bmw.stop();
/**
 *回傳
 */
return 0;
}
